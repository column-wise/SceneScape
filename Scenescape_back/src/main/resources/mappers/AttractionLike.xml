<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrip.model.dao.AttractionLikeDTO">
	<insert id="insert" parameterType="AttractionLikeDTO">
		insert into attractionlikes(user_id, post_no)
		values(#{userId}, #{postNo})
	</insert>
	
	<select id="select" parameterType="AttractionLikeDTO">
    select exists (
        			 select 1
        			 from attractionlikes
        			 where user_id = #{userId} and attraction_no = #{attractionNo}
    );
	</select>
</mapper>